<%- include('../port/layout-start', {title: title}) %>
<%- include('../port/menu') %>

<h1><%= title %></h1>


<div class="row">
    <div class="col-sm-8">
        <div class="card" id=<%= book.id %>>
            <div class="card-body">

                <h5 class="card-title"><%= book.title %></h5>
                <p class="card-text"><%= book.description %></p>
                <div class="text-right">
                    <a class="btn btn-sm btn-primary" href="/api/book/update/<%= book.id %>">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                    <form action="/api/book/remove/<%= book.id %>" method="POST" class="d-inline">
                        <button class="btn btn-sm btn-danger">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-sm-8">
        <div id="list" class="list-group">
            <% book.messages.map((el) => {  %>
            <div class="list-group-item list-group-item-action ">
                <div class="d-flex w-100 justify-content-between">
                    <small><%= el.username %></small>
                    <small class="text-muted"><%= el.date %></small>
                </div>
                <p class="mb-1"><%= el.text %></p>
            </div>
            <% }) %>
        </div>
    </div>
</div>



<%- include('../port/layout-end') %>